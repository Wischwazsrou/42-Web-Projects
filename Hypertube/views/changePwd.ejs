<% include ./partials/header.ejs %>


<div id="backgroundChangePwd">
    <div class="page header">
        <h1 class="text-center">Change your password</h1>
    </div>
    <div class="container home_container">
        <div class="row">
            <div class="col-md-6">
                <div class="backgroundDetails">
                    <h1 id="backgroundTitle" class="title"></h1>
                    <p id="backgroundContent"></p>
                </div>
            </div>
            <div class="col-md-2"></div>
            <%
            var details = [];

            if (error.length > 0) {%>
            <div class="container">
                <div class="alert alert-danger">
                    <strong><%= error %></strong>
                    <%  if (info.length > 0){
                        details = info.toString().split("/"); %>
                    <ul>
                        <%  details.forEach(function (message) {
                        if (message != ""){%>
                        <li><%= message %></li>
                        <%      }
                        })%>
                    </ul>
                    <% }%>
                </div>
            </div>
            <% }%>

            <div class="col-md-4 forms">
                <h2 class="text-center">Enter your username</h2>
                <form action="/change_pwd" method="POST">
                    <div class="form-group">
                        <label class="yellow">Username</label>
                        <input class="form-control" type="text" name="username" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <label class="yellow" >New password</label>
                        <input class="form-control" type="password" name="new_password" placeholder="new_password">
                    </div>
                    <div class="form-group">
                        <label class="yellow">Confirm password</label>
                        <input class="form-control" type="password" name="confirm_password" placeholder="confirm_password">
                    </div>
                    <div class="form-group">
                        <label class="yellow">Code</label>
                        <input class="form-control" type="text" name="code" placeholder="Code">
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer.ejs %>